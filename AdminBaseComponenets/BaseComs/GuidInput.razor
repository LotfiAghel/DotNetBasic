
@using Microsoft.AspNetCore.Components.Forms
@using Microsoft.AspNetCore.Components.Rendering;
@using System.Collections.Generic
@using Newtonsoft.Json.Linq;


@inherits ValueInput<Guid>


        <TextEdit 
                   ReadOnly=@ReadOnly
          Text=@svalue
                   TextChanged=@Click2
         />






@code
{
    string svalue;

    Guid prvValue;
   
    async Task Click2(string  vv)
    {
        this.value=Guid.Parse(vv);
        if (prvValue != value)
        {

            OnChange(value);
        }
        prvValue = value;

    }

}

