@using System.Collections.Generic


@using Newtonsoft.Json.Linq;




<div class="row pt-2 pb-2">
    <div class="col-sm-10">
        <InputText id="name" class="form-control" 
                   @bind-Value=@value 
                   readonly=@ReadOnly
                   onchange=@Click2() />
    </div>
</div>






@code
{
    [Parameter]
    public List<Attribute> Attributes { get; set; } = new List<Attribute>();

    [Parameter]
    public string value { get; set; } = "";

    string prvValue;
    public Action<object> OnChange { get; set; }

    [Parameter]
    public bool ReadOnly{ get; set; }=false;

    async Task Click2()
    {
        Console.WriteLine($"value {value}");
        for(int i=0; i<10; ++i){
            value=value.Replace((char)('Û°'+i),(char)('0'+i));
            Console.WriteLine($"value {value}");
        }
        if (prvValue != value)
        {

            OnChange(value);
        }
        prvValue = value;

    }

}

